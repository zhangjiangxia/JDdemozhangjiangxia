<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ss_rwm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/sao_kind"

            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ahape"
            >

            <ImageView
                android:id="@+id/ss_search_imag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:src="@mipmap/order_find" />

            <EditText
                android:id="@+id/ss_search_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="所搜的商品"
                android:paddingRight="40dp"
                android:singleLine="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="40dp"
                android:src="@mipmap/root" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/order_msg" />
    </LinearLayout>

</LinearLayout>
